/*Regions*/
create table Regions                                  
(
Region varchar(20),                                  /*地區名稱*/
RegionCode int not null,
CONSTRAINT PK_Region_Region PRIMARY KEY CLUSTERED (Region) /*Regions.RegionId為主鍵*/
);

