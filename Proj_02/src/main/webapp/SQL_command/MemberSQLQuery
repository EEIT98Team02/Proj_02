CREATE TABLE LikeTypes
(
MemberEmail varchar(50) FOREIGN KEY REFERENCES Members(MemberEmail)
ON DELETE CASCADE    
ON UPDATE CASCADE,
Type varchar(20) FOREIGN KEY REFERENCES EventTypes(Type)
ON DELETE CASCADE    
ON UPDATE CASCADE,
primary key(MemberEmail,Type)
);


