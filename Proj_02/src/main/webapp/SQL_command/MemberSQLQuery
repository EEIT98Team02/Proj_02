/*EventTypes*/
CREATE TABLE EventTypes
(
/*TypeId int identity(1,1) not null,                 
TypeId int,                                      喜好類型ID*/
Type varchar(20),                                  /*類型名稱*/
CONSTRAINT PK_Type_Type PRIMARY KEY CLUSTERED (Type) /*EventTypes.Type為主鍵*/
);

